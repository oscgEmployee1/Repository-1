<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="test_order_form" model="ir.ui.view">
        <field name="name">test_order_form</field>
        <field name="model">test.order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="test" type="object" string="test"/>
                </header>
                <sheet>
                    <div class="ribbon ribbon-top-right">
                        <span class="bg-success">Test</span>
                    </div>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="test_order_id"/>
                            <field name="c1"/>
                            <field name="f1"/>
                            <field name="f2"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>

        </field>
    </record>

    <record id="test_order_tree" model="ir.ui.view">
        <field name="name">test_order_tree</field>
        <field name="model">test.order</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

</odoo>
